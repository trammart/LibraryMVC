@model LibraryMVC.Models.RegisterUserViewModel
@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Register";
}
<main aria-labelledby="title">
    @*<h2 id="title">@ViewBag.Title.</h2>*@
    <h4>New here?</h4>
    <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
    @using (Html.BeginForm("AddUser", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-lg", @placeholder = "Usename" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-lg", @placeholder = "First Name" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-lg", @placeholder = "Last Name" })
        </div>

        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", @placeholder = "Email" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", @placeholder = "Password" })
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", @placeholder = "Confirm Password" })
        </div>
        <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
            SIGN UP
        </button>
        <div class="text-center mt-4 font-weight-light">
            Already have an account? @Html.ActionLink("Sign in!", "Login", "Account")
        </div>
        @*<div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>*@
    }
</main>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
