@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxBooks)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxDays)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TypeId }) |
            @Html.ActionLink("Details", "Details", new { id = item.TypeId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TypeId })
        </td>
    </tr>
