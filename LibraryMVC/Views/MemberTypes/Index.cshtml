@model IEnumerable<LibraryMVC.Models.MemberType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxBooks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
